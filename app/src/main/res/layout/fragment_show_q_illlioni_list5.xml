<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <TextView
                android:id="@+id/tvQNumIllioni5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="" />


            <TextView
                android:id="@+id/tvQTitleShowIllioni5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cairo_bold"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvQNumIllioni5"
                tools:text="   555  ماذ يقصد ب علوم الحاسب " />


            <ImageView
                android:id="@+id/img1ShowIllioni5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@color/purple_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvQTitleShowIllioni5" />


            <ImageView
                android:id="@+id/imgShowAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="28dp"
                android:layoutDirection="ltr"
                android:layout_marginBottom="15dp"
                android:src="@drawable/icon_show_ans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img1ShowIllioni5" />

            <TextView
                android:id="@+id/tvQRigthTwoAnsShowIllioni5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="-----------------"
                android:textColor="@color/tv_color_questions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/cairo"
                android:visibility="gone"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/imgShowAns"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgShowAns" />

<!--            <Button-->
<!--                android:id="@+id/btnNext"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginHorizontal="80dp"-->
<!--                android:layout_marginVertical="50dp"-->
<!--                android:layout_marginBottom="0dp"-->
<!--                android:inputType="text"-->
<!--                android:text="التالى"-->
<!--                android:textSize="20sp"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tvQRigthTwoAnsShowIllioni5" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <RadioGroup
        android:id="@+id/radio_group_QTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView8"
        app:layout_constraintVertical_bias="0.3">

        <RadioButton
            android:id="@+id/rbSelectYesShowIllioni5"
            style="@style/BtnFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="@font/cairo"
            android:text="@string/yes_ans"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rbSelectNoShowIllioni5"
            style="@style/BtnFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="@font/cairo"
            android:text="@string/no_ans"
            android:textAlignment="center" />


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>